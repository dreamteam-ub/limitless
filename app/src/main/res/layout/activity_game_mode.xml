<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameModeActivity" android:orientation="vertical" android:background="@color/colorBlack"
        android:padding="40dp">


    <ImageButton
            android:scaleType="fitXY"
            android:layout_gravity="top"
            android:layout_width="60dp"
            android:adjustViewBounds="true"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back_arrow"
            android:contentDescription="@string/back"
            android:id="@+id/blackArrowButton"/>
                <Space
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
    <ImageButton
            android:layout_width="250dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" app:srcCompat="@drawable/my_map"
            android:id="@+id/myMapButton"
            android:contentDescription="@string/mymap_button"
            android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="19dp"/>
    <TextView
            style="@style/cts_limitless_purple"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:layout_height="118dp" android:id="@+id/MyMapText"
            android:singleLine="false" tools:text="@string/text_mymap" android:text="@string/text_mymap"
    />
    <ImageButton
            android:layout_width="250dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/inf_button"
            android:layout_height="wrap_content" app:srcCompat="@drawable/infinite_mode"
            android:id="@+id/infiniteModeButton" android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="19dp"/>
    <TextView
            android:text="@string/text_infinite"
            tools:text="@string/text_infinite"
            android:layout_width="match_parent"
            android:singleLine="false"
            style="@style/cts_limitless_purple"
            android:textSize="30sp"
            android:layout_height="wrap_content" android:id="@+id/infiniteText"
    />


</LinearLayout>