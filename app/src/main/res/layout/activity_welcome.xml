<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity" android:orientation="vertical" android:padding="20dp"
        android:background="@color/colorBlack">

    <TextView
            android:text="@string/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/welcome_tv" android:gravity="center_horizontal"
            android:textSize="35sp" android:textStyle="bold"
            android:textColor="@color/colorWelcomeText"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/username_tv" tools:text="ExampleUser"
            android:textStyle="bold" android:textSize="30sp" android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWelcomeText"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp" app:srcCompat="@drawable/demon_skull_logo"
            android:id="@+id/logo_img"
            android:contentDescription="@string/app_name" android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    <TextView
            android:text="@string/ask_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ask_name_tv" android:textSize="25sp"
            android:textStyle="bold" android:textColor="@color/colorWelcomeName"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_name_et"
            tools:ignore="Autofill" android:hint="@string/example_user"
            style="@style/ET_Color_Welcome"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    <ImageButton
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_height="100dp" app:srcCompat="@drawable/go_button"
            android:id="@+id/setname_btn"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/go" android:layout_width="wrap_content"
            android:adjustViewBounds="true" android:cropToPadding="true"/>
</LinearLayout>