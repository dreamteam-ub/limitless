<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.VersusActivityEnd" android:orientation="vertical"
        android:padding="40dp"
        android:background="@color/colorBlack" android:id="@+id/root">

    <TextView
            android:text="@string/p1_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/road_limitless" android:textSize="40dp"
            android:textAlignment="center" android:id="@+id/winners" android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal" android:layout_marginBottom="20dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


        <TextView
                android:text="@string/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textStart"
                android:layout_marginEnd="30dp" android:id="@+id/first_pos" android:textColor="@color/colorYellow"
                android:fontFamily="@font/roadrage"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textEnd" android:id="@+id/first_punt" tools:text="20:23"
                android:textColor="@color/colorYellow"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
    >


        <TextView
                android:text="@string/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textStart"
                android:layout_marginEnd="30dp" android:id="@+id/second_pos" android:textColor="@color/colorYellow"
                android:fontFamily="@font/roadrage"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textEnd" android:id="@+id/second_punt" tools:text="10:25"
                android:textColor="@color/colorYellow"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


        <TextView
                android:text="@string/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textStart"
                android:layout_marginEnd="30dp" android:id="@+id/score1_text" android:textColor="@color/colorYellow"
                android:fontFamily="@font/roadrage"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textEnd" android:id="@+id/score1_puntuation" tools:text="300"
                android:textColor="@color/colorYellow"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">


        <TextView
                android:text="@string/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textStart"
                android:layout_marginEnd="30dp" android:id="@+id/score2_text" android:textColor="@color/colorYellow"
                android:fontFamily="@font/roadrage"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/road_limitless" android:textSize="24dp"
                android:textAlignment="textEnd" android:id="@+id/score2_puntuation" tools:text="20"
                android:textColor="@color/colorYellow"/>

    </LinearLayout>


    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="180dp"
            android:contentDescription="@string/retry_level"
            android:background="@android:color/transparent"
            android:layout_height="50dp" app:srcCompat="@drawable/retry_button" android:id="@+id/retryButton_2PM"
            android:layout_marginBottom="30dp" android:layout_margin="30dp"/>

    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="180dp"
            android:background="@android:color/transparent"
            android:layout_height="50dp" app:srcCompat="@drawable/menu" android:id="@+id/menuButton_2PM"/>

</LinearLayout>