<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.VersusActivityEnd" android:orientation="vertical"
        android:padding="40dp"
        android:background="@color/colorBlack">

    <TextView
            android:text="@string/p1_wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crimes_times_six"
            style="@style/cts_limitless_white_worlds" android:textSize="60sp"
            android:textAlignment="center" android:id="@+id/winners"/>

    <TextView
            android:text="@string/ranking_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ranking_lines_1" style="@style/cts_limitless_yellow" android:textSize="40sp"
            android:maxLines="1" android:gravity="center_horizontal"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">


        <TextView
                android:text="@string/p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="40sp"
                android:layout_marginTop="30dp" android:textAlignment="center"
                android:layout_marginEnd="130dp" android:id="@+id/first_pos"/>

        <TextView
                android:text="@string/puntuation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="40sp"
                android:layout_marginTop="30dp" android:textAlignment="center" android:id="@+id/first_punt"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">


        <TextView
                android:text="@string/p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="40sp"
                android:layout_marginTop="10dp" android:textAlignment="center"
                android:layout_marginEnd="130dp" android:id="@+id/second_pos"/>

        <TextView
                android:text="@string/puntuation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="40sp"
                android:layout_marginTop="10dp" android:textAlignment="center" android:id="@+id/second_punt"/>

    </LinearLayout>

    <TextView
            android:text="@string/ranking_lines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/ranking_lines_2" style="@style/cts_limitless_yellow" android:textSize="40sp"
            android:maxLines="1" android:gravity="center_horizontal"/>

    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="220dp"
            android:contentDescription="@string/retry_level"
            android:background="@android:color/transparent"
            android:layout_height="60dp" app:srcCompat="@drawable/retry_button" android:id="@+id/retryButton_2PM"
            android:layout_marginBottom="30dp" android:layout_margin="40dp"/>

    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="220dp"
            android:background="@android:color/transparent"
            android:layout_height="60dp" app:srcCompat="@drawable/menu" android:id="@+id/menuButton_2PM"/>

</LinearLayout>