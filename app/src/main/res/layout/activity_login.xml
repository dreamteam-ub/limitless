<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.LoginActivity" android:padding="20dp" android:orientation="vertical"
        android:id="@+id/login_layout">

    <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp" app:srcCompat="@drawable/limitless_white"
            android:id="@+id/limitless_logo"
            android:contentDescription="@string/app_name" android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    <TextView
            android:text="@string/sigin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/signin_tv"
            android:textColor="@color/colorPrimary" android:layout_gravity="center" android:textSize="30sp"
            android:textStyle="bold"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/signin_btn" android:layout_gravity="center"/>
</LinearLayout>