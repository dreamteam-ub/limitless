<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity" android:background="@color/colorBlack"
        android:padding="40dp" android:orientation="vertical" android:id="@+id/root">
    <ImageButton
            android:scaleType="fitXY"
            android:layout_gravity="top"
            android:layout_width="60dp"
            android:adjustViewBounds="true"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back_arrow"
            android:contentDescription="@string/back"
            android:id="@+id/info_back_button" android:layout_marginBottom="40dp"/>

    <TextView
            android:text="@string/info_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/info_version"
            android:fontFamily="@font/crimestimessix"
            style="@style/cts_limitless" android:textSize="45dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/version_details"
            style="@style/road_limitless"
            android:layout_marginStart="40dp" android:textSize="24dp" tools:text="1.0.0"/>

    <TextView
            android:text="@string/developers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/info_developers"
            android:fontFamily="@font/crimestimessix" android:textColor="@color/colorWhite"
            style="@style/cts_limitless" android:layout_marginTop="20dp" android:textSize="45dp"/>
    <TextView
            android:text="@string/detail_developer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/developers_details1"
            android:layout_marginStart="40dp" android:textColor="@color/colorWhite" android:textSize="30dp"/>
    <TextView
            android:text="@string/detail_developer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/developers_details2"
            android:layout_marginStart="40dp" android:textColor="@color/colorWhite" android:textSize="30dp"/>
    <TextView
            android:text="@string/detail_developer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/developers_details3"
            android:layout_marginStart="40dp" android:textColor="@color/colorWhite" android:textSize="30dp"/>
    <TextView
            android:text="@string/detail_developer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/developers_details4"
            android:layout_marginStart="40dp" android:textColor="@color/colorWhite" android:textSize="30dp"/>

    <TextView
            android:text="@string/music_rights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/info_music_rights"
            android:fontFamily="@font/crimestimessix" android:textColor="@color/colorWhite"
            style="@style/cts_limitless" android:layout_marginTop="20dp" android:textSize="45dp"/>
    <TextView
            android:text="@string/detail_music_rights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/music_rights_details"
            android:layout_marginStart="40dp" android:textColor="@color/colorWhite" android:textSize="30dp"/>

</LinearLayout>