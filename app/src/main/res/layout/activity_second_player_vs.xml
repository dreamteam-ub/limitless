<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SecondPlayerVsActivity" android:orientation="vertical"
        android:padding="50dp"
        android:background="@color/colorBlack">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/player1_dead" style="@style/cts_limitless_yellow" android:textSize="40sp"
            android:maxLines="1" android:gravity="center_horizontal" android:layout_marginBottom="30dp"
            android:text="@string/player1_dead" android:textColor="@color/colorWhite"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/corazon_muerte" android:id="@+id/losePlayer1"
            android:layout_marginBottom="30dp" android:contentDescription="@string/youDiedheart"/>
    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/next_player"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/next_player"
            android:id="@+id/player2_start_button"/>

</LinearLayout>