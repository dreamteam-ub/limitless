<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBlack"
        android:padding="40dp"
        tools:context=".view.GameDeadActivity">

    <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:contentDescription="@string/you_died"
            android:layout_height="52dp"
            app:srcCompat="@drawable/you_died"
            android:id="@+id/youDiedImg" android:layout_marginBottom="30dp"/>

    <ImageView
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="204dp"
            android:contentDescription="@string/youDiedheart"
            android:background="@android:color/transparent"
            android:layout_height="185dp"
            app:srcCompat="@drawable/corazon_muerte"
            android:id="@+id/dead_heart" android:layout_marginBottom="20dp"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp" android:paddingStart="30dp" android:paddingEnd="30dp">


        <TextView
                android:text="@string/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginEnd="30dp" android:id="@+id/score_text"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="30sp"
                android:textAlignment="textEnd" android:id="@+id/score_puntuation" tools:text="X"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:paddingStart="30dp" android:paddingEnd="30dp" android:layout_marginBottom="15dp">


        <TextView
                android:text="@string/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginEnd="30dp" android:id="@+id/time"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/crimes_times_six"
                style="@style/cts_limitless_yellow" android:textSize="30sp"
                android:textAlignment="textEnd" android:id="@+id/time_text" tools:text="X"/>

    </LinearLayout>



    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:layout_width="220dp"
            android:contentDescription="@string/retry_level"
            android:background="@android:color/transparent"
            android:layout_height="60dp" app:srcCompat="@drawable/retry_button" android:id="@+id/retryButton_normal"
            android:layout_marginBottom="30dp"/>

    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/worlds_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="220dp"
            android:background="@android:color/transparent"
            android:layout_height="60dp" app:srcCompat="@drawable/worlds" android:id="@+id/dead_worldsButton"
            android:layout_marginBottom="30dp"/>
    <ImageButton
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:contentDescription="@string/menu_button"
            android:layout_gravity="center_horizontal"
            android:layout_width="220dp"
            android:background="@android:color/transparent"
            android:layout_height="60dp" app:srcCompat="@drawable/menu" android:id="@+id/dead_menuButton"/>



</LinearLayout>