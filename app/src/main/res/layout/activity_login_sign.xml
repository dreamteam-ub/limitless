<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="fill_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="clip_horizontal" android:layout_margin="40dp">

    <TextView
            android:text="@string/sigin"
            android:layout_width="120dp"
            android:layout_height="40dp" android:id="@+id/signin_tv"
            android:textColor="@color/colorPrimary" android:layout_gravity="center" android:textSize="30sp"
            android:textStyle="bold" android:layout_marginBottom="40dp" android:textAlignment="center"/>


    <ImageButton
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/play_button" android:id="@+id/signin_btn"
            android:adjustViewBounds="true" android:contentDescription="@string/sigin"
            android:cropToPadding="true" android:layout_width="180dp"
            android:layout_marginBottom="30dp"/>
</LinearLayout>