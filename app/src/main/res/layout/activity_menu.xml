<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity" android:orientation="vertical" android:background="@color/colorBlack"
        android:padding="40dp" android:gravity="center_vertical">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp" app:srcCompat="@drawable/game_logo"
            android:id="@+id/menu_game_logo" android:contentDescription="@string/app_name"
            android:adjustViewBounds="true" android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"/>
    <ImageButton
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/play_button" android:id="@+id/play_btn"
            android:adjustViewBounds="true" android:contentDescription="@string/play_button"
            android:cropToPadding="true" android:layout_width="180dp"
            android:layout_marginBottom="30dp"/>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/rankings_button"
            android:id="@+id/rankings_btn"
            android:adjustViewBounds="true" android:contentDescription="@string/rankings_button"
            android:cropToPadding="true"
            android:layout_marginBottom="30dp"/>
    <ImageButton
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/options_button"
            android:id="@+id/option_btn"
            android:adjustViewBounds="true"
            android:contentDescription="@string/options_button" android:cropToPadding="true"
            android:layout_marginBottom="30dp"/>
    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/info_button"
            android:id="@+id/info_btn"
            android:adjustViewBounds="true"
            android:contentDescription="@string/options_button" android:layout_gravity="end"/>

</LinearLayout>