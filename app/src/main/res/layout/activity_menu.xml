<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:orientation="vertical" android:background="@color/colorBlack"
        android:padding="40dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp" app:srcCompat="@drawable/limitless_black"
                android:id="@+id/limitless_logo" android:contentDescription="@string/app_name"
                android:adjustViewBounds="true" android:layout_gravity="center_horizontal"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        <ImageButton
                android:layout_width="205dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/play_button" android:id="@+id/play_btn"
                android:adjustViewBounds="true" android:contentDescription="@string/play"
                android:cropToPadding="true"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/rankings_button"
                android:id="@+id/rankings_btn"
                android:adjustViewBounds="true" android:contentDescription="@string/rankings"
                android:cropToPadding="true"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        <ImageButton
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/options_button"
                android:id="@+id/option_btn"
                android:adjustViewBounds="true"
                android:contentDescription="@string/options" android:cropToPadding="true"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="bottom">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/info_button"
                android:id="@+id/info_btn"
                android:adjustViewBounds="true"
                android:contentDescription="@string/options" android:layout_gravity="end"/>
    </LinearLayout>
</LinearLayout>