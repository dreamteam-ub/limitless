<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity" android:orientation="vertical" android:background="@color/colorBlack"
        android:padding="40dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"


    >


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="546dp" app:srcCompat="@drawable/in_game_temporal"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:id="@+id/liveGameImage"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"
        />
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="horizontal">
            <Button
                    android:text="@string/loseButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/loseButton"
            />
            <Space android:layout_width="35dp" android:layout_height="match_parent"/>
            <Button
                    android:text="@string/winButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/winButton"
            />
            <Space android:layout_width="30dp" android:layout_height="match_parent"/>

            <Button
                    android:text="@string/pauseButton"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"
                    android:id="@+id/pauseButton"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>