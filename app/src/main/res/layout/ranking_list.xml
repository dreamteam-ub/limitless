<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ranking_position"
            style="@style/road_limitless" tools:text="1" android:textSize="24dp"
            android:layout_marginEnd="20dp" android:textStyle="bold"
            android:gravity="center" android:textAlignment="center" android:textColor="@color/colorYellow"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ranking_user"
                    style="@style/cts_limitless" android:textSize="24dp" tools:text="Cepeda Calvo"
                    android:textColor="@color/colorYellow"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ranking_time"
                    android:textSize="20dp"
                    style="@style/road_limitless" tools:text="Time: MM:SS" android:textColor="@color/colorYellow"/>
        </LinearLayout>

</LinearLayout>