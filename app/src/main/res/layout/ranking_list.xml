<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ranking_position"
            style="@style/cts_limitless_yellow" tools:text="1" android:textSize="30sp"
            android:layout_marginEnd="20dp" android:textStyle="bold"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ranking_user"
                    style="@style/cts_limitless_yellow" android:textSize="24sp" tools:text="Cepeda Calvo"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ranking_time"
                    android:textSize="20sp"
                    style="@style/cts_limitless_yellow" tools:text="Time: MM:SS"/>
        </LinearLayout>

</LinearLayout>