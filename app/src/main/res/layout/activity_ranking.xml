<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity" android:background="@color/colorBlack"
        android:padding="40dp" android:orientation="vertical">
    <ImageButton
            android:scaleType="fitXY"
            android:layout_gravity="top"
            android:layout_width="60dp"
            android:adjustViewBounds="true"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back_arrow_ranking"
            android:contentDescription="@string/back"
            android:id="@+id/ranking_back_button" android:layout_marginBottom="30dp"/>
    <TextView
            android:text="@string/inf_mode"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:fontFamily="@font/crimes_times_six"
            style="@style/cts_limitless_yellow" android:textSize="40sp" android:id="@+id/infinity_title"/>
    <TextView
            android:text="@string/ranking_lines"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/ranking_lines" style="@style/cts_limitless_yellow" android:textSize="40sp"
            android:maxLines="1" android:gravity="center_horizontal"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/ranking_recicler"
            android:background="@android:color/transparent" android:layout_marginTop="10dp" android:layout_weight="1"
            android:layout_height="0dp" android:layout_marginBottom="10dp"/>

    <TextView
            android:text="@string/ranking_lines"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:id="@+id/ranking_lines2" style="@style/cts_limitless_yellow" android:textSize="40sp"
            android:gravity="center_horizontal" android:layout_marginBottom="10dp" android:maxLines="1"
            android:layout_gravity="center"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical" android:id="@+id/my_rank_ly">
        <TextView
                android:layout_width="320dp"
                android:layout_height="30dp"
                android:id="@+id/my_user_name"
                style="@style/cts_limitless_white" android:textSize="24sp" tools:text="Cepeda Calvo"
        />
        <TextView
                android:layout_width="320dp"
                android:layout_height="25dp"
                android:id="@+id/my_time"
                android:textSize="20sp"
                style="@style/cts_limitless_white" tools:text="Time: MM:SS"/>

    </LinearLayout>
</LinearLayout>