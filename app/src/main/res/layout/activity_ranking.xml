<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MenuActivity" android:background="@color/colorBlack"
        android:padding="40dp" android:orientation="vertical">
    <ImageButton
            android:scaleType="fitXY"
            android:layout_gravity="top"
            android:layout_width="60dp"
            android:adjustViewBounds="true"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back_arrow_ranking"
            android:contentDescription="@string/back"
            android:id="@+id/ranking_back_button"/>
    <TextView
            android:text="@string/inf_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/crimes_times_six"
            style="@style/cts_limitless_yellow" android:layout_marginTop="20dp" android:textSize="50sp"/>
    <TextView
            android:text="@string/ranking_lines"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:id="@+id/ranking_lines" style="@style/cts_limitless_yellow" android:textSize="45sp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ranking_recicler"
            android:background="@android:color/transparent" android:paddingTop="1dp" android:layout_marginTop="20dp"/>
</LinearLayout>