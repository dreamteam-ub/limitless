<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Welcome Activity -->
    <style name="ET_Color_Welcome" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorETGrayWelcome</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorDarkWhite</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- Font -->
    <style name="cts_limitless_yellow">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/crimes_times_six</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="cts_limitless_white">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/crimes_times_six</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="cts_limitless_purple">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorStylePurple</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/crimes_times_six</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="cts_limitless_pink">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorStylePink</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/crimes_times_six</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="cts_limitless_purple_worlds">
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorStylePurple</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/crimes_times_six</item>
        <item name="android:textSize">45sp</item>
    </style>
</resources>
