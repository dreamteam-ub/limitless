<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/volume_style</item>
    </style>
    <!-- Welcome Activity -->
    <style name="ET_Color_Welcome" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/colorETGrayWelcome</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorDarkWhite</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- Font -->
    <style name="cts_limitless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/crimestimessix</item>
    </style>
    <style name="road_limitless">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/roadrage</item>
    </style>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
